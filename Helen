                            nudoku
                            ;;
                        7)
                            nam=figlet
                            promptDialog
                            clear
                            read -p "Write here something: " userText   
                            echo $userText | figlet
                            sleep 3
                            ;;
                        8)
                            nam=lolcat
                            promptDialog
                            clear
                            echo ">>>>>>>>>>>>>>>>>>>>>>> It's so colorful!! <<<<<<<<<<<<<<<<<<<<<<<<" | lolcat
                            sleep 3
                            ;;
                        9)
